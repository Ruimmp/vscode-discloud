{
  "name": "discloud",
  "displayName": "Discloud",
  "icon": "https://cdn.discordapp.com/attachments/915795298780053544/1014921524966338650/discloudlogo.png",
  "galleryBanner": {
    "color": "#5865F2",
    "theme": "dark"
  },
  "description": "Somos uma plataforma de nuvem baseada em contêiner que nasceu com a vontade de oferecer hospedagem fácil, rápida, gratuita e de qualidade.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "discloud",
    "discloud.app",
    "discloudbot",
    "discord",
    "host"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "discloud-apps.helpButton",
        "title": "Discloud Help",
        "icon": {
          "light": "src/assets/light/helper.svg",
          "dark": "src/assets/dark/helper.svg"
        }
      },
      {
        "command": "discloud-apps.refreshButton",
        "title": "Recarregar Apps",
        "icon": {
          "light": "src/assets/light/refresh.svg",
          "dark": "src/assets/dark/refresh.svg"
        }
      },
      {
        "command": "discloud-apps.importCode",
        "title": "Importar app para o vscode",
        "icon": {
          "light": "src/assets/light/code.svg",
          "dark": "src/assets/dark/code.svg"
        }
      },
      {
        "command": "discloud-apps.deleteEntry",
        "title": "Delete App",
        "icon": {
          "light": "src/assets/light/del.svg",
          "dark": "src/assets/dark/del.svg"
        }
      },
      {
        "command": "discloud.commit",
        "title": "Commit"
      },
      {
        "command": "discloud.upload",
        "title": "Upload"
      },
      {
        "command": "discloud-apps.startEntry",
        "title": "Start"
      },
      {
        "command": "discloud-apps.stopEntry",
        "title": "Stop"
      },
      {
        "command": "discloud-apps.restartEntry",
        "title": "Restart"
      },
      {
        "command": "discloud-apps.logsEntry",
        "title": "Logs"
      },
      {
        "command": "discloud-apps.ramEntry",
        "title": "Ram Edit"
      },
      {
        "command": "discloud.logIn",
        "title": "Login on Discloud"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "discloud-sidebar",
          "title": "Discloud.app",
          "icon": "src/assets/icons/discloudlogo.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "discloud-apps",
        "contents": "Você ainda não forneceu um token para ter acesso aos recursos da Discloud.\n[Send token Discloud](command:discloud.logIn)",
        "when": "!config.discloud.token"
      }
    ],
    "views": {
      "discloud-sidebar": [
        {
          "type": "tree",
          "id": "discloud-apps",
          "name": "Apps",
          "visibility": "visible"
        },
        {
          "type": "tree",
          "id": "discloud-teams",
          "name": "Teams",
          "visibility": "collapsed"
        },
        {
          "type": "tree",
          "id": "discloud-subdomains",
          "name": "SubDomains",
          "visibility": "collapsed"
        },
        {
          "type": "tree",
          "id": "discloud-domains",
          "name": "customDomains",
          "visibility": "collapsed"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "discloud-apps.helpButton",
          "when": "view == discloud-apps",
          "group": "navigation"
        },
        {
          "command": "discloud-apps.refreshButton",
          "when": "editorIsOpen && view == discloud-apps",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "discloud-apps.deleteEntry",
          "when": "view == discloud-apps",
          "group": "inline"
        },
        {
          "command": "discloud-apps.importCode",
          "when": "view == discloud-apps",
          "group": "inline"
        },
        {
          "command": "discloud-apps.startEntry",
          "when": "view == discloud-apps"
        },
        {
          "command": "discloud-apps.stopEntry",
          "when": "view == discloud-apps"
        },
        {
          "command": "discloud-apps.restartEntry",
          "when": "view == discloud-apps"
        },
        {
          "command": "discloud-apps.logsEntry",
          "when": "view == discloud-apps"
        },
        {
          "command": "discloud-apps.ramEntry",
          "when": "view == discloud-apps"
        }
      ],
      "explorer/context": [
        {
          "command": "discloud.commit",
          "when": "explorerResourceIsFolder"
        },
        {
          "submenu": "discloudsub",
          "group": "1_modification"
        }
      ],
      "discloudsub": [
        {
          "command": "discloud.commit"
        }
      ]
    },
    "submenus": [
      {
        "label": "Discloud",
        "id": "discloudsub"
      }
    ],
    "configuration": {
      "title": "Discloud",
      "properties": {
        "discloud.token": {
          "type": "string",
          "default": "",
          "markdownDescription": "Seu token da API da [Discloud](https://discloudbot.com)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/download": "^8.0.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "axios": "^0.27.2",
    "decompress": "^4.2.1",
    "download": "^8.0.0"
  }
}
