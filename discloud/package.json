{
  "name": "dc",
  "displayName": "Discloud",
  "description": "Usado para fazer métodos na DisCloud diretamente pelo Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dc.commit"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dc.commit",
        "title": "Faça um Commit"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dc.commit",
          "when": "explorerResourceIsFolder",
          "group": "2_workspace"
        }
      ]
    },
    "configuration": {
      "title": "Discloud Configuration",
      "properties": {
        "dc.token": {
          "type": "string",
          "default": "",
          "description": "Seu token da API da Discloud."
        }
      }
    }

  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "discloud-api": "^2.0.0-alpha.0"
  }
}
